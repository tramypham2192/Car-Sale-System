    private void addCarBtnActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        //code to add car to table and validate not to leave field blank
        if (idTextField.getText().equals("") || brandTextField.getText().equals("") || yearMakeTextField.getText().equals("") 
                || KmText.getText().equals("") || PriceText.getText().equals("")){
         //message show when leave field blank
         JOptionPane.showMessageDialog(this, "Please input all fields");
        } else {
            //store data into array
            String data[] = {idTextField.getText(), brandTextField.getText(), yearMakeTextField.getText(), KmText.getText(), PriceText.getText()};
            DefaultTableModel tblModel = (DefaultTableModel)jTable1.getModel();
            tblModel.addRow(data);//row added
            //show message saying that Car has been added
            JOptionPane.showMessageDialog(this, "Succesfully added new car");
            //clear text field for new entry
            idTextField.setText("");
            brandTextField.setText("");
            yearMakeTextField.setText("");
            KmText.setText("");
            PriceText.setText("");
        }
    }                                         

    private void deleteCarBtnActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        DefaultTableModel tblModel = (DefaultTableModel)jTable1.getModel();
        //i = the index of the selected row
        int i = jTable1.getSelectedRow();
        if (i >= 0){
            //remove a row from table
            tblModel.removeRow(i);
        } else {
            System.out.println("There were issue while Deleting the Row");
        }
    }                                            

    private void editCarBtnActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        DefaultTableModel tblModel = (DefaultTableModel)jTable1.getModel();
        // i = the index of the selected row
        int i = jTable1.getSelectedRow();

          if (i >= 0){
               String newID = idTextField.getText();
               String newBrandText = brandTextField.getText();
               String newYearMake = yearMakeTextField.getText();
               String newKm = KmText.getText();
               String newPrice = PriceText.getText();
               
               //update value
               tblModel.setValueAt(newID, i, 0);
               tblModel.setValueAt(newBrandText, i, 1);
               tblModel.setValueAt(newYearMake, i, 2);
               tblModel.setValueAt(newKm , i, 3);
               tblModel.setValueAt(newPrice, i, 4);
               
               //show message that field has been edited suscessfully
               JOptionPane.showMessageDialog(this, "Edit car successfully");
          } else {
              if (jTable1.getRowCount() == 0){
                   JOptionPane.showMessageDialog(this, "Table is empty");
              } else {
                JOptionPane.showMessageDialog(this, "Please select a car to edit");  
                  }
          } 

    }                                          

    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        DefaultTableModel tblModel = (DefaultTableModel)jTable1.getModel();
        int i = jTable1.getSelectedRow();

        String newID = tblModel.getValueAt(i, 0).toString();
        String newBrandText = tblModel.getValueAt(i, 1).toString();
        String newYearMake = tblModel.getValueAt(i, 2).toString();
        String newKm = tblModel.getValueAt(i, 3).toString();
        String newPrice = tblModel.getValueAt(i, 4).toString();
        
        idTextField.setText(newID);
        brandTextField.setText(newBrandText);
        yearMakeTextField.setText(newYearMake);
        KmText.setText(newKm);
        PriceText.setText(newPrice);
    }                                    

